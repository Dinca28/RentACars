@model List<RentACars.Models.Car>

@{
    ViewData["Title"] = "All Cars";
}

<h1>All Available Cars</h1>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-3">
            <div class="card mb-4 shadow-sm">
                @if (car.Image != null && car.Image.Length > 0)
                {
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(car.Image)" alt="Car Image" class="card-img-top" />
                }
                <div class="card-body">
                    <h5 class="card-title">@car.Brand.Name @car.Model.Brand</h5>
                    <p class="card-text">From @car.PricePerDay$ / Day</p>
                    <p class="card-text">Location: @car.City.Name</p>
                    <a href="@Url.Action("Details", "Cars", new { id = car.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
