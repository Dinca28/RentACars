@model List<RentACars.Models.Car>

@{
    ViewData["Title"] = "All Cars";
}

<h1>All Available Cars</h1>

<div class="row">
    @foreach (var car in Model)
    {
        <div class="col-md-3">
            <div class="card mb-4 shadow-sm">
                <img src="@car.ImageUrl" class="card-img-top" alt="@car.Brand @car.Model">
                <div class="card-body">
                    <h5 class="card-title">@car.Brand @car.Model</h5>
                    <p class="card-text">From @car.PricePerDay$ / Day</p>
                    <p class="card-text">Location: @car.Location</p>
                    <a href="@Url.Action("Details", "Home", new { id = car.Id })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
