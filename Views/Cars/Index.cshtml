@model IEnumerable<RentACars.Models.Car>

<h2>All Cars</h2>

<table class="table">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price Per Day</th>
            <th>Location</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Brand</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.PricePerDay</td>
                <td>@(car.City?.Name ?? "No City")</td>
                <td>
                    @if (car.Image != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(car.Image)" alt="Car Image" />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
