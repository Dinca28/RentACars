@model RentACars.Models.Car

<h2>Post a Car</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Brand"></label>
        <input asp-for="Brand" class="form-control" />

        <label asp-for="Model"></label>
        <input asp-for="Model" class="form-control" />

        <label asp-for="Year"></label>
        <input asp-for="Year" class="form-control" type="number" />

        <label asp-for="ImageUrl"></label>
        <input asp-for="ImageUrl" class="form-control" />

        <label asp-for="PricePerDay"></label>
        <input asp-for="PricePerDay" class="form-control" type="number" step="0.01" />

        <label asp-for="Location"></label>
        <input asp-for="Location" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Post Car</button>
</form>
