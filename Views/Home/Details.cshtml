@model RentACars.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<h1>@Model.Brand @Model.Model</h1>

<div class="card mb-4">
    @if (Model.Image != null)
    {
        <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Image)" alt="Car Image" />
    }
    <div class="card-body">
        <p>Brand ID: @Model.BrandId</p>
        <p>Model ID: @Model.ModelId</p>
        <p>City ID: @Model.CityId</p>
        <p>Price Per Day: @Model.PricePerDay</p>

        <p class="card-text">Description:</p>

        <a href="#" class="btn btn-primary">Rent Now</a>
    </div>
</div>

<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Back to Home</a>
